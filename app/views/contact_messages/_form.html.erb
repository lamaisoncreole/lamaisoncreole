<%= simple_form_for(@contact_message, ) do |f| %>
<!-- :html => {:class => 'form-horizontal' } -->

<div class='row'>
  <div class='span4'>
    <h1><%= t 'contact_us' %></h1>
  </div>
  <div class='span8'>
    <div class='well' style="text-align:justify;">
      <%= I18n.t('contact_par').html_safe %>
    </div>
  </div>
</div>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row">
      <div class='span4'>
        <div class='well'>
          <%= f.input :nom, label: 'Nom :', as: :string  %>
          <%= f.input :email, label: 'Email :', as: :string  %>
          <%= f.input :telephone, label: 'Téléphone :', as: :string %>
          <label for="contact_message[humans]" class="humans">Human check: Leave this field empty</label>
          <input type="text" name="contact_message[humans]" id="humans" class="humans" />
        </div>
      </div>
      <div class='span8'>
        <%= f.input :message, label: 'Votre message:',:input_html => { 'style' => "width:100%", "rows" => 10 } %>
      </div>
    </div>
  </div>

  <div align="center">
    <%= f.button :submit, "Envoyer", class: "btn btn-success btn-large" %>
  </div>
<% end %>
